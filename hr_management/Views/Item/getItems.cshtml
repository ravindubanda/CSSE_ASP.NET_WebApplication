@model IEnumerable<hr_management.Models.Item>

@{
    ViewBag.Title = "getItems";
    Layout = null;
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryInformation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsRestrictedItem)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeliveryInformation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsRestrictedItem)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateItem", new {  id=item.ItemId }) |
            @Html.ActionLink("Details", "ItemDetails", new { id = item.ItemId }) |
           
            @Html.ActionLink("Delete", "DeleteItem", new { id=item.ItemId})
        </td>
    </tr>
}

</table>
